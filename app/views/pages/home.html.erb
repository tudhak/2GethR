<div class="h-100 w-100 d-flex flex-column justify-content-center align-items-center">
  <div class="avatars d-flex justify-content-center gap-2">
    <%= image_tag('avatar_0.png') %>
    <%= image_tag('avatar_0.png', style:"transform: scaleX(-1);") %>
  </div>
  <h1 class="logo text-center">
    2gethr
  </h1>
  <div class="cta text-center mt-5">
    <% if user_signed_in? %>
      <%= link_to "Play", couple_path(current_user.couple), class: "game-button" %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path, class: "game-button" %>
    <% end %>
  </div>
</div>
