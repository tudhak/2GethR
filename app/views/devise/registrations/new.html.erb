<div class="container my-4 mx-auto">
  <div class="row justify-content-center">
    <div class="col-8 col-md-6">

      <h2 class="mb-4">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { controller: "datepicker" }})  do |f| %>
        <%= f.error_notification %>
        <%# TODO: Ajouter l'affichage des erreurs de formulaire qui ne s'affichent pas pour le moment %>
        <% if @user.errors.any? %>
          <p class="text-danger">Please review the following problems related to user information:</p>
          <% @user.errors.full_messages.each do |message| %>
            <div class="text-danger mb-2"><%= message %></div>
          <% end %>
        <% end %>

        <% if @couple.errors.any? %>
          <p class="text-danger">Please review the following problems related to couple information: </p>
          <% @couple.errors.full_messages.each do |message| %>
            <div class="text-danger mb-2"><%= message %></div>
          <% end %>
        <% end %>

        <div class="form-inputs mb-5">
          <h3><em>User information</em></h3>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :first_name,
                        required: true %>
            <%= f.input :last_name,
                        required: true %>
            <%= f.input :nickname,
                        required: true %>
            <%= f.input :date_of_birth,
                        as: :string,
                        input_html: { data: { datepicker_target: "birthDate" } },
                        required: true
                        %>
            <%= f.input :photo, as: :file %>
            <h3 class="mt-5"><em>Couple information</em></h3>
            <p>If any, please enter below the couple token provided by your partner:</p>
            <div class="mb-3 string optional">
              <label class="string optional" for="token">Token</label>
              <input class="form-control string optional" type="text" name="couple[token]" id="token">
            </div>
            <p>If you do not have any token, please enter below your couple address and couple nickname:</p>
            <div class="mb-3 string optional">
              <label class="string optional" for="couple_name">Nickname</label>
              <input class="form-control string optional" type="text" name="couple[nickname]" id="couple_nickname">
            </div>
            <div class="mb-3 string optional">
              <label class="string optional" for="couple_address">Address</label>
              <input class="form-control string optional" type="text" name="couple[address]" id="couple_address">
            </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-lightpurple small-button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
